<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_dimension_header_backdround"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="#37474F"
        app:layout_constraintBottom_toTopOf="@+id/imv_dimension_value_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_dimension_width_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/width_label"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintEnd_toStartOf="@+id/txv_dimension_length_label"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintTop_toTopOf="@+id/txv_dimension_length_label" />

    <TextView
        android:id="@+id/txv_dimension_length_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/length_label"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintEnd_toEndOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintStart_toStartOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintTop_toTopOf="@+id/imv_dimension_header_backdround" />

    <TextView
        android:id="@+id/txv_dimension_height_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/height_label"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_dimension_length_label"
        app:layout_constraintEnd_toEndOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/txv_dimension_length_label"
        app:layout_constraintTop_toTopOf="@+id/txv_dimension_length_label" />

    <ImageView
        android:id="@+id/imv_dimension_value_background"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="#81D4FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imv_dimension_header_backdround"
        app:layout_constraintTop_toBottomOf="@+id/txv_dimension_length_label" />

    <TextView
        android:id="@+id/txv_dimension_width"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        tools:text="12"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_dimension_value_background"
        app:layout_constraintEnd_toEndOf="@+id/txv_dimension_width_label"
        app:layout_constraintStart_toStartOf="@+id/txv_dimension_width_label"
        app:layout_constraintTop_toTopOf="@+id/imv_dimension_value_background" />

    <TextView
        android:id="@+id/txv_dimension_length"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        tools:text="8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_dimension_value_background"
        app:layout_constraintEnd_toEndOf="@+id/txv_dimension_length_label"
        app:layout_constraintStart_toStartOf="@+id/txv_dimension_length_label"
        app:layout_constraintTop_toTopOf="@+id/imv_dimension_value_background" />

    <TextView
        android:id="@+id/txv_dimension_height"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        tools:text="23"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_dimension_value_background"
        app:layout_constraintEnd_toEndOf="@+id/txv_dimension_height_label"
        app:layout_constraintStart_toStartOf="@+id/txv_dimension_height_label"
        app:layout_constraintTop_toTopOf="@+id/imv_dimension_value_background" />

</android.support.constraint.ConstraintLayout>